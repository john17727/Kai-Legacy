<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Kai.DayNight" parent="Theme.Kai"/>
    
    <style name="Theme.Kai" parent="Base.Kai">
        <item name="colorPrimary">@color/Kai_White</item>
        <item name="colorPrimaryVariant">@color/Kai_White</item>
        <item name="android:colorPrimaryDark">@color/Kai_White</item>
        <item name="colorSecondary">@color/Kai_Orange</item>
        <item name="colorSecondaryVariant">@color/Kai_Orange</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Kai.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Kai.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Kai.LargeComponent</item>
    </style>

    <style name="Base.Kai" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:colorPrimaryDark">?colorPrimary</item>
        <item name="colorAccent">?colorSecondary</item>

        <item name="chipStyle">@style/Widget.Kai.Chip</item>

        <item name="textAppearanceHeadline5">@style/TextAppearance.Kai.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Kai.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Kai.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Kai.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Kai.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Kai.Body2</item>
    </style>
</resources>